@article{ ISI:000395724000017,
Author = {Mentzelou, Paraskevi},
Title = {{INFORMATION AND COMMUNICATION TECHNOLOGY (ICT) AND GREEN URBAN
   INFRASTRUCTURES - ISSUES AND TRENDS}},
