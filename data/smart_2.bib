@article{ ISI:000397823200001,
Author = {Battarra, R. and Gargiulo, C. and Pappalardo, G. and Boiano, D. A. and
   Oliva, Jessica Smeralda},
Title = {{Planning in the era of Information and Communication Technologies.
   Discussing the label: Smart in South-European cities with environmental
