@article{ ISI:000415728300003,
Author = {Joss, Simon and Cook, Matthew and Dayot, Youri},
Title = {{Smart Cities: Towards a New Citizenship Regime? A Discourse Analysis of
   the British Smart City Standard}},
Journal = {{JOURNAL OF URBAN TECHNOLOGY}},
