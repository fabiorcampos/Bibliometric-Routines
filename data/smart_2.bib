ORCID-Numbers = {{salvia, monica/0000-0001-8989-0377
   di leo, senatro/0000-0003-2627-5726}},
Unique-ID = {{ISI:000391899200024}},
}

@article{ ISI:000391899400014,
Author = {Dantas, Guilherme de A. and de Castro, Nivalde J. and Brandao, Roberto
   and Rosental, Rubens and Lafranque, Alexandre},
Title = {{Prospects for the Brazilian electricity sector in the 2030s: Scenarios
   and guidelines for its transformation}},
Journal = {{RENEWABLE \& SUSTAINABLE ENERGY REVIEWS}},
Year = {{2017}},
Volume = {{68}},
Number = {{2}},
Pages = {{997-1007}},
Month = {{FEB}},
Note = {{10th Conference on Sustainable Development of Energy, Water and
   Environment Systems (SDEWES), Dubrovnik, CROATIA, SEP 27-OCT 02, 2015}},
Abstract = {{The long-term study of the electricity sector needs to consider a number
   of variables beyond the changes in population or economic activity, and
   include the availability of resources, the development of technology
   standards, environmental management and cultural habits. Thus,
   quantitative predictions may prove fragile and a consistent alternative
   lies in developing qualitative scenarios. In this article, we examine
