@article{ ISI:000414931500165,
Author = {Claudi Socoro, Joan and Alias, Francesc and Ma Alsina-Pages, Rosa},
Title = {{An Anomalous Noise Events Detector for Dynamic Road Traffic Noise
   Mapping in Real-Life Urban and Suburban Environments}},
Journal = {{SENSORS}},
Year = {{2017}},
Volume = {{17}},
Number = {{10}},
Month = {{OCT}},
Abstract = {{One of the main aspects affecting the quality of life of people living
   in urban and suburban areas is their continued exposure to high Road
   Traffic Noise (RTN) levels. Until now, noise measurements in cities have
   been performed by professionals, recording data in certain locations to
   build a noise map afterwards. However, the deployment of Wireless
   Acoustic Sensor Networks (WASN) has enabled automatic noise mapping in
   smart cities. In order to obtain a reliable picture of the RTN levels
   affecting citizens, Anomalous Noise Events (ANE) unrelated to road
   traffic should be removed from the noise map computation. To this aim,
   this paper introduces an Anomalous Noise Event Detector (ANED) designed
