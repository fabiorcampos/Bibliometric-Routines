@article{ ISI:000413946400007,
Author = {Sanchez-Iborra, Ramon and Cano, Maria-Dolores},
Title = {{On the Similarities Between Urban Traffic Management and Communication
   Networks: Application of the Random Early Detection Algorithm for
   Self-Regulating Intersections}},
