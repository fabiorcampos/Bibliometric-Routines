@article{ ISI:000359365100023,
Author = {Klaic, Zvonimir and Fekete, Kresimir and Sljivac, Damir},
Title = {{DEMAND SIDE LOAD MANAGEMENT IN THE DISTRIBUTION SYSTEM WITH PHOTOVOLTAIC
