@article{ ISI:000363067600009,
Author = {McNeill, Donald},
Title = {{Global firms and smart technologies: IBM and the reduction of cities}},
Journal = {{TRANSACTIONS OF THE INSTITUTE OF BRITISH GEOGRAPHERS}},
