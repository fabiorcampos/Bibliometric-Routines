@article{ ISI:000363407300020,
Author = {Naderi, Hamidreza and Sheybani, Fereshte and Sarvghad, Mohammadreza and
   Meshkat, Zahra and Nooghabi, Mehdi Jabbari},
Title = {{Etiological Diagnosis of Community-Acquired Pneumonia in Adult Patients:
