@article{ ISI:000419726600010,
Author = {Ho, Ezra},
Title = {{Smart subjects for a Smart Nation? Governing (smart)mentalities in
   Singapore}},
Journal = {{URBAN STUDIES}},
Year = {{2017}},
Volume = {{54}},
Number = {{13}},
Pages = {{3101-3118}},
Month = {{OCT}},
Abstract = {{As visions of smart urbanism gain traction around the world, it is
   crucial that we question the benefits that an increasingly technologised
   urbanity promise. It is not about the technology, but bettering peoples'
   lives, insist smart city advocates. In this paper, I question the
   progressive potential of the smart city drawing on the case of
   Singapore's Smart Nation initiative. Using the case studies of the smart
   home and `learning to code' movement, I highlight the limits of such
   `smart' interventions as they are stunted by the
