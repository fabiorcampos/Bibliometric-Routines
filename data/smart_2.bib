@article{ ISI:000389604600040,
Author = {Zhang, Ke and Jia, Haitao and Lv, Haibin},
Title = {{Coverage-enhancing approach in multimedia directional sensor networks
   for smart transportation}},
Journal = {{MULTIMEDIA TOOLS AND APPLICATIONS}},
