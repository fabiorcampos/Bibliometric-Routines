Author = {De Felice, Mario and Cerqueira, Eduardo and Melo, Adalberto and Gerla,
   Mario and Cuomo, Francesca and Baiocchi, Andrea},
Title = {{A distributed beaconless routing protocol for real-time video
   dissemination in multimedia VANETs}},
Journal = {{COMPUTER COMMUNICATIONS}},
