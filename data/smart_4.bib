@article{ ISI:000209672800004,
Author = {Kumar, Neeraj and Rodrigues, Joel J. P. C. and Chilamkurti, Naveen},
Title = {{Bayesian Coalition Game as-a-Service for Content Distribution in
   Internet of Vehicles}},
Journal = {{IEEE INTERNET OF THINGS JOURNAL}},
Year = {{2014}},
