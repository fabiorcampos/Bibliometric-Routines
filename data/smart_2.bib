@article{ ISI:000382793500071,
Author = {Ruf, Holger and Schroedter-Homscheidt, Marion and Heilscher, Gerd and
   Beyer, Hans Georg},
Title = {{Quantifying residential PV feed-in power in low voltage grids based on
   satellite-derived irradiance data with application to power flow
