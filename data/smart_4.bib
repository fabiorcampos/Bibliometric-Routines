@article{ ISI:000330321100037,
Author = {Moreno Sanchez, Pedro and Marin Lopez, Rafa and Gomez Skarmeta, Antonio
   F.},
Title = {{PANATIKI: A Network Access Control Implementation Based on PANA for IoT
   Devices}},
Journal = {{SENSORS}},
Year = {{2013}},
Volume = {{13}},
