@article{ ISI:000372831500014,
Author = {Zhang, Fan and Zhao, Juanjuan and Tian, Chen and Xu, Chengzhong and Liu,
   Xue and Rao, Lei},
Title = {{Spatiotemporal Segmentation of Metro Trips Using Smart Card Data}},
Journal = {{IEEE TRANSACTIONS ON VEHICULAR TECHNOLOGY}},
