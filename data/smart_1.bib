@article{ ISI:000418978100096,
Author = {Tian, Zhang-peng and Wang, Jian-qiang and Wang, Jing and Zhang, Hong-yu},
Title = {{A multi-phase QFD-based hybrid fuzzy MCDM approach for performance
   evaluation: A case of smart bike-sharing programs in Changsha}},
