@article{ ISI:000410715200001,
Author = {Baniata, Mohammad and Hong, Jiman},
Title = {{Energy-Efficient Unequal Chain Length Clustering for Wireless Sensor
   Networks in Smart Cities}},
Journal = {{WIRELESS COMMUNICATIONS \& MOBILE COMPUTING}},
Year = {{2017}},
Abstract = {{The recent advances in sensing and communication technologies such as
   wireless sensor networks (WSN) have enabled low-priced distributed
   monitoring systems that are the foundation of smart cities. These
   advances are also helping to monitor smart cities and making our living
   environments workable. However, sensor nodes are constrained in energy
   supply if they have no constant power supply. Moreover, communication
   links can be easily failed because of unequal node energy depletion. The
   energy constraints and link failures affect the performance and quality
   of the sensor network. Therefore, designing a routing protocol that
   minimizes energy consumption and maximizes the network lifetime should
   be considered in the design of the routing protocol for WSN. In this
   paper, we propose an Energy-Efficient Unequal Chain Length Clustering
   (EEUCLC) protocol which has a suboptimal multihop routing algorithm to
   reduce the burden on the cluster head and a probability-based cluster
   head selection algorithm to prolong the network lifetime. Simulation
   results show that the EEUCLC mechanism enhanced the energy balance and
   prolonged the network lifetime compared to other related protocols.}},
DOI = {{10.1155/2017/5790161}},
Article-Number = {{UNSP 5790161}},
