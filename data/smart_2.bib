@article{ ISI:000389104300024,
Author = {Zivkovic, Marija and Pereverza, Kateryna and Pasichnyi, Oleksii and
   Madzarevic, Aleksandar and Ivezic, Dejan and Kordas, Olga},
Title = {{Exploring scenarios for more sustainable heating: The case of Nis,
   Serbia}},
Journal = {{ENERGY}},
Year = {{2016}},
Volume = {{115}},
