@article{ ISI:000383391000027,
Author = {Cai, Hongming and Luan, Shuai and Jiang, Lihong and Shah, Nazaraf and
   Farmer, Ray and Chao, Kuo-Ming and Xu, Boyi},
Title = {{A multi-layer Internet of things database schema for online-to-offline
   systems}},
Journal = {{INTERNATIONAL JOURNAL OF DISTRIBUTED SENSOR NETWORKS}},
Year = {{2016}},
Volume = {{12}},
Number = {{8}},
Month = {{AUG}},
Abstract = {{Due to the widespread usage of Internet of things devices in
   online-to-offline businesses, a huge volume of data from heterogeneous
   data sources are collected and transferred to the data processing
   components in online-to-offline systems. This leads to increased
   complexity in data storage and querying, especially for spatial-temporal
   data processing in online-to-offline systems. In this article, first, we
   design a multi-layer Internet of things database schema to meet the
   diverse requirements through fusing spatial data with texts, images, and
