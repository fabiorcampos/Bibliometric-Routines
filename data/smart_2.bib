Title = {{Increasing collaboration and participation in smart city governance: a
   cross-case analysis of smart city initiatives}},
Journal = {{INFORMATION TECHNOLOGY FOR DEVELOPMENT}},
Year = {{2017}},
Volume = {{23}},
Number = {{3, SI}},
Pages = {{526-553}},
Abstract = {{This study addresses the concept of smart governance in the context of
   smart cities, with a focus on analyzing the phenomenon of smart
   collaboration. Relying on the existing collaboration and participation
   concepts in the smart city domain, an empirical analysis was undertaken
   of how ICT can promote collaborative governance and increase the
   participation and engagement in government. The multiple case studies
   focus on three cities in Brazil that run municipal operations centers in
   an effort to become smarter: Rio de Janeiro, Porto Alegre, and Belo
   Horizonte. Interviews with directors, managers, and technicians shed
   light on the contribution that ICT makes in promoting an environment of
   collaboration in the government. The findings have revealed that ICT has
   an important role in supporting information sharing and integration
   between government agencies and external stakeholders, including
   citizens, especially in developing countries.}},
DOI = {{10.1080/02681102.2017.1353946}},
ISSN = {{0268-1102}},
EISSN = {{1554-0170}},
Unique-ID = {{ISI:000416920000007}},
