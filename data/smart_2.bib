@article{ ISI:000397136900164,
Author = {Mehmood, Rashid and Alam, Furqan and Albogami, Nasser N. and Katib, Iyad
   and Albeshri, Aiiad and Altowaijri, Saleh M.},
Title = {{UTiLearn: A Personalised Ubiquitous Teaching and Learning System for
