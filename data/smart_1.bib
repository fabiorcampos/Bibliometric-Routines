@article{ ISI:000419227200013,
Author = {Ruiz-Rosero, Juan and Ramirez-Gonzalez, Gustavo and Williams, Jennifer
   M. and Liu, Huaping and Khanna, Rahul and Pisharody, Greeshma},
Title = {{Internet of Things: A Scientometric Review}},
Journal = {{SYMMETRY-BASEL}},
Year = {{2017}},
Volume = {{9}},
Number = {{12}},
Month = {{DEC}},
Abstract = {{Internet of Things (IoT) is connecting billions of devices to the
   Internet. These IoT devices chain sensing, computation, and
   communication techniques, which facilitates remote data collection and
   analysis. wireless sensor networks (WSN) connect sensing devices
   together on a local network, thereby eliminating wires, which generate a
   large number of samples, creating a big data challenge. This IoT
   paradigm has gained traction in recent years, yielding extensive
   research from an increasing variety of perspectives, including
   scientific reviews. These reviews cover surveys related to IoT vision,
   enabling technologies, applications, key features, co-word and cluster
   analysis, and future directions. Nevertheless, we lack an IoT
   scientometrics review that uses scientific databases to perform a
